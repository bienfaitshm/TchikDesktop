{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/preload/*.d.ts",
    "src/commons/*",
    "src/commons/**/*",
    "src/packages/*",
    "src/packages/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "paths": {
      "@/renderer/*": ["src/renderer/*"],
      "@/commons/*": ["src/commons/*"],
      "@/packages/*": ["src/packages/*"]
    }
  }
}
